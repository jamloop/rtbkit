{
  "nodes": [
  {
    "name": "uswest2a.rtb1",
    "root": "/home/rtbkit/prod/rtb/",
    "tasks": [
    {
      "name": "banker",
      "root": ".", "path": "./bin/banker_service_runner",
      "arg": [
        "--service-name", "uswest2a.rtb1.banker",
        "--bootstrap", "configs/bootstrap.uswest2a.json",
        "--redis-uri", "127.0.0.1:6380"
      ],
      "log": true
    },
    {
      "name": "configs",
      "root": ".", "path": "./bin/agent_configuration_service_runner",
      "arg": [
        "--service-name", "uswest2a.rtb1.acs",
        "--bootstrap", "configs/bootstrap.uswest2a.json"
      ],
      "log": true
    },
    {
      "name": "events",
      "root": ".", "path": "./bin/adserver_runner",
      "arg": [
        "--service-name", "uswest2a.rtb1.events",
        "--bootstrap", "configs/bootstrap.uswest2a.json",
        "--adserver-configuration", "configs/events-config.json"
      ],
      "log": true
    },
    {
      "name": "logger",
      "root": ".", "path": "./bin/data_logger_ex",
      "arg": [
        "--service-name", "uswest2a.rtb1.logger",
        "--bootstrap", "configs/bootstrap.uswest2a.json",
        "--log-dir", "./logs/data/"
      ],
      "log": true
    },
    {
      "name": "monitor",
      "root": ".", "path": "./bin/monitor_service_runner",
      "arg": [
        "--service-name", "uswest2a.rtb1.monitor",
        "--bootstrap", "configs/bootstrap.uswest2a.json"
      ],
      "log": true
    },
    {
      "name": "pal",
      "root": ".", "path": "./bin/post_auction_runner",
      "arg": [
        "--service-name", "uswest2a.rtb1.pal",
        "--bootstrap", "configs/bootstrap.uswest2a.json",
        "--bidder", "configs/bidder-config.json",
        "--win-seconds", "3600.0",
        "--auction-seconds", "900.0"
      ],
      "log": true
    },
    {
      "name": "router",
      "root": ".", "path": "./bin/router_runner",
      "arg": [
        "--service-name", "uswest2a.rtb1.router",
        "--bootstrap", "configs/bootstrap.uswest2a.json",
        "--exchange-configuration", "configs/router-config.json",
        "--bidder", "configs/bidder-config.json",
        "--spend-rate", "1000000USD/1M",
        "--slowModeTolerance", "172800"
      ],
      "log": true
    },
    {
      "name": "agent-brightroll",
      "root": ".", "path": "./bin/basic_bidding_agent",
      "arg": [
        "--service-name", "uswest2a.rtb1.agent_brightroll",
        "--bootstrap", "configs/bootstrap.uswest2a.json",
        "--agent-configuration", "configs/datacratic-01.json"
      ],
      "log": true
    },
    {
      "name": "agent-tremor",
      "root": ".", "path": "./bin/basic_bidding_agent",
      "arg": [
        "--service-name", "uswest2a.rtb1.agent_tremor",
        "--bootstrap", "configs/bootstrap.uswest2a.json",
        "--agent-configuration", "configs/datacratic-02.json"
      ],
      "log": true
    }
    ]
  }]
}
